{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@root/*": ["src/*"],
      "@dtos/*": ["src/infra/dto/*"],
      "@entities/*": ["src/infra/entities/*"],
      "@valueobjects/*": ["src/infra/value-objects/*"],
      "@services/*": ["src/data/services/*"],

      "@testRoot/*": ["test/*"]
    }
  }
}
